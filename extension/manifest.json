{
  "manifest_version": 3,
  "name": "YouTube Video Chatbot",
  "version": "1.0.0",
  "description": "Chat with YouTube videos using AI",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
